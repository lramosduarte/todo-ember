{{#if editing}}
    {{input class="edit" value=todo.descricao escape-press="cancelEdit" enter="submitTodo" focus-out="cancelEdit"}}
{{else}}
    {{input type="checkbox" checked=todo.concluido  class="toggle"}}
	<label class="{{if todo.concluido 'completed'}}"
	{{action "editTodo" on="doubleClick"}}>{{todo.descricao}}	</label>
	{{#link-to 'todos.comentarios' todo.id}}...{{/link-to}}
	<button class="destroy" {{action "deleteTodo"}}>Deletar</button>  
{{/if}}
